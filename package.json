{
  "name": "moonlet-core",
  "version": "0.0.1",
  "description": "Moonlet - Core Package",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "npm run build:lib && npm run build:dec",
    "build:gulp": "gulp build",
    "build:lib": "tsc -p .",
    "build:dec": "scripts/declarations.sh",
    "coverage": "scripts/run_coverage.sh all",
    "coverage-reuse": "scripts/run_coverage.sh all use-existing",
    "test": "scripts/run_tests.sh all",
    "test-reuse": "scripts/run_tests.sh all use-existing",
    "test-single": "scripts/run_tests.sh single",
    "test-single-reuse": "scripts/run_tests.sh single use-existing",
    "testToHtml": "scripts/testOutputToHtml.sh",
    "start-all-rpcs": "scripts/rpcs/start_all.sh",
    "stop-all-rpcs": "scripts/rpcs/stop_all.sh",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "bin": {
    "rpcs": "./scripts/rpc.sh"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": "src",
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cryptolandtech/moonlet-core"
  },
  "keywords": [
    "moonlet-core",
    "crypto",
    "wallet"
  ],
  "author": "Micky Socaci <micky@nowlive.ro>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cryptolandtech/moonlet-core/issues"
  },
  "homepage": "https://github.com/cryptolandtech/moonlet-core#readme",
  "dependencies": {
    "axios": "^0.16.2",
    "bignumber.js": "^7.2.1",
    "bip39": "^2.5.0",
    "chai": "^4.2.0",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-util": "^5.2.0",
    "fs": "0.0.1-security",
    "ganache-cli": "^6.1.8",
    "hdkey": "^1.1.0",
    "https": "^1.0.0",
    "kaya": "git+https://github.com/cryptolandtech/kaya.git#a682da9aaca90e131c5217fcdbda184cb4bb2ff1",
    "ts-mocha": "^1.3.0",
    "zilliqa-js": "git+https://github.com/mickys/Zilliqa-JavaScript-Library.git#797bbb97acd6ee95653d186bc2a110fe79d34d5f"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/ethereumjs-tx": "^1.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.2.3",
    "compression-webpack-plugin": "^1.1.12",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify-es": "^1.0.4",
    "gulp-util": "^3.0.8",
    "istanbul": "^0.4.5",
    "laksa-core-crypto": "0.0.45",
    "mocha": "^4.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-loader": "^1.1.3",
    "mocha-webpack": "^1.0.1",
    "nyc": "^13.1.0",
    "safe-buffer": "^5.1.2",
    "source-map-support": "^0.5.9",
    "tsify": "^4.0.0",
    "typescript": "^2.8.3",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "standard": {
    "env": "mocha",
    "globals": [
      "describe",
      "it"
    ]
  }
}
